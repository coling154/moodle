{{!
    @template block_myoverview/progress-bar

    This template renders a simple progress bar.

    Example context (json):
    {
        "progress": 50
    }
}}
<div class="progress-text">
    <span class="sr-only">{{#str}}aria:courseprogress, block_myoverview{{/str}}</span>
    {{progress}}% complete
</div>

<meter id="progress-bar" min="0" max="100" value="{{progress}}"
       low="33" {{! From 0-33% Color: Red}}
       high="66" {{! From 34-66% Color: Yellow}}
       optimum="100"> {{! From 67-100% Color: Green}}
    {{progress}}%
</meter>